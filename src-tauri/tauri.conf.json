{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "chuuni keys",
    "identifier": "com.troylu.chuuni-keys",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist",
        "removeUnusedCommands": true
    },
    "app": {
        "windows": [
            {
                "title": "chuuni keys",
                "width": 889,
                "height": 500,
                "backgroundColor": "#1e1e2e",
                "decorations": false
            }
        ],
        "security": {
            "csp": "default-src 'self' ipc: data: asset: http://ipc.localhost http://asset.localhost https://api-chuuni-keys.troylu.com; style-src 'self' ipc: data: asset: http://ipc.localhost http://asset.localhost 'unsafe-inline'",
            "assetProtocol": {
                "enable": true,
                "scope": {
                    "requireLiteralLeadingDot": false,
                    "allow": ["**/*"]
                }
            }
        }
    },
    "bundle": {
        "active": true,
        "targets": ["nsis", "deb"],
        "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
        "homepage": "chuuni-keys.troylu.com",
        "resources": ["resources/**/*"],
        "windows": {
            "nsis": {
                "customLanguageFiles": {
                    "English": "nsis/labels.nsh"
                },
                "installerIcon": "icons/icon.ico",
                "sidebarImage": "nsis/sidebar.bmp",
                "installerHooks": "nsis/hooks.nsh"
            }
        },
        "linux": {
            "deb": {
                "postRemoveScript": "deb/postremove.sh"
            }
        }
    },
    "plugins": {
        "deep-link": {
            "desktop": {
                "schemes": ["chuuni"]
            }
        }
    }
}
